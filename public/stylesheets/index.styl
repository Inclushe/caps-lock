@import _vars
@import _button
@import _form
@import _post
@import _profile

body
  margin: 0
  padding: 0
  font-family: main
  min-height: 100%
  color: mainTextColor
  background-color: bgColor
  background: url('/public/images/background.png')
  background-size: 448px
  background-attachment: fixed
  background-repeat: repeat
  background-position: center

.layout-container
  margin: 0 auto
  padding: 64px 128px
  position: relative
  max-width: 896px
  min-height: calc(100vh - 128px)
  background: bgColor

header.layout-container__header
  display: flex
  justify-content: space-between
  align-items: center
  div.logo
    svg
      height: 80px
      width: 96px
  div.buttons
    display: flex
    align-items: center
    .avi-aside
      margin-right: 16px
      text-align: right
      font-family: mono
      font-size: 24px
      font-weight: bold
      a, p
        margin: 0
        padding: 0

main.layout-container__content
  margin-top: 32px
  .sign-up-row
    margin-top: 32px
    display: flex
    align-items: center
    width: 100%
    a
      flex-grow: 1
    button.button
      padding: 16px 0
      width: 100%
    span
      padding: 0 32px
      font-family: mono
      font-size: 24px
  svg
    fill: mainTextColor
  p.body-paragraph
    margin: 32px 0
  h1.page-header
    display: inline-block
    margin: 0
    margin-bottom: 10px
    padding: 0
    font-weight: bold
    font-size: 48px
    box-shadow: 0 10px 0 mainColor
  h2.section-header
    display: flex
    margin: 32px 0
    padding: 0
    font-weight: 500
    font-size: 24px
    align-items: center
    span
      margin-left: 16px

footer.layout-container__footer
  margin-top: 64px
  hr
    display: inline-block
    text-align: left
    height: 4px
    width: 64px
    background: secondaryTextColor
    border: none
  p
    white-space: pre-wrap
    font-family: Inter UI
    font-weight: bold
    line-height: 27px
    font-size: 18px
    color: #666666

.profile-editor-block
  margin-top: 64px
  width: 100%
  display: flex
  justify-content: center
  .profile-editor__avatar-block
    margin-right: 64px
    text-align: center
    h2.section-header
      display: flex
      justify-content: center
      margin: 16px
    img.avatar
      height: 192px
      width: 192px
    flex-direction: column
  .profile-editor__input-block
    width: 100%
    // display: flex
    flex-direction: column
    .button.button--primary
      width: 100%

.post-container
  margin-top: 32px

.project-status
  position: fixed
  margin: 16px
  bottom: 0
  right: 0
  font-family: mono
  font-weight: bold
  font-size: 32px
  text-shadow: -2px -2px 0 white,
               2px -2px 0 white,
               -2px 2px 0 white,
               2px 2px 0 white

img.avatar
  border-radius: 50%
  height: 64px
  width: 64px

a
  color: mainColor
  &:hover
    color: lighten(mainColor, 5%)
  // &:visited
  //   color: darken(mainColor, 25%)

.background-gradient
  background: linear-gradient(90deg, transparent, mainColor, mainColor, transparent)
  position: fixed
  top: 0
  left: 0
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  z-index: -1

pre.code
  padding: 16px
  width: 100%
  background: secondaryColor
  word-break: break-word

.uppercase
  text-transform: uppercase

.monospace
  font-family: mono !important

.caps-dot
  color: mainColor

