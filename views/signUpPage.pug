extends layout

include mixins/_formElement

block content
  h1.page-header SIGN UP
  h2.section-header
    include ../public/images/icons/round-mail-24px.svg
    span SIGN UP USING YOUR EMAIL
  form(method="POST").form
    .row
      +formElement({
        type: "email",
        name: "email",
        title: "EMAIL ADDRESS",
        placeholder: "my@email.com",
        min: 1,
        max: 255
      }, errors)
      input(type="submit" id="emailSubmit" value="SIGN UP ->").button.button--primary
  ul
    li Emails are only sent when signing up and logging in.
    li Cookies are only used for sessions.