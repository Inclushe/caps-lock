mixin post(options={}, interactive=false)
  .post
    //- pre= JSON.stringify(options.user, null, 2)
    .post__author
      if options.user
        .post__author-image(style=`background-image: url('${options.user.avatarURL + "?s=384&d=mp"}'); background-size: 100%`)
      else
        .post__author-image
    if interactive
      .post__content.interactive
        .post__content-text
          p.interactive= options.content
    else
      .post__content
        .post__content-header
          p!= `<a href="/user/${options.user.name}">${options.user.name}</a> SAID`
        .post__content-text
          p= options.content
        .post__content-footer
          .post__age
            include ../../public/images/icons/round-access_time-24px.svg
            if options.created_at === '{{ created_at }}'
              span= options.created_at
            else
              span= dayjs(Number(options.created_at)).fromNow()
